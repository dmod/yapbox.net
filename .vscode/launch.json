{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Server",
        "skipFiles": [
          "<node_internals>/**"
        ],
        "program": "${workspaceFolder}/server.js",
        "restart": true,
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }